<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_financial_report_prefix_tree_view" model="ir.ui.view">
            <field name="name">account.financial.report.prefix.tree</field>
            <field name="model">account.financial.report.prefix</field>
            <field name="arch" type="xml">
                <tree string="Account Financial Report Code Prefixes">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="account_financial_report_prefix_search_view" model="ir.ui.view">
            <field name="name">account.financial.report.prefix.search</field>
            <field name="model">account.financial.report.prefix</field>
            <field name="arch" type="xml">
                <search string="Account Financial Report Code Prefixes">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="account_financial_report_prefix_form_view" model="ir.ui.view">
            <field name="name">account.financial.report.prefix.form</field>
            <field name="model">account.financial.report.prefix</field>
            <field name="arch" type="xml">
                <form string="Account Financial Report Code Prefix">
                  <sheet string="Account Financial Report Code Prefix">
                      <div class="oe_title">
                          <label for="name"/>
                          <h1>
                              <field name="name"/>
                          </h1>
                      </div>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="account_financial_report_prefix_action" model="ir.actions.act_window">
            <field name="name">Financial Reports Prefixes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.financial.report.prefix</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="account_financial_report_prefix_tree_view"/>
            <field name="search_view_id" ref="account_financial_report_prefix_search_view"/>
        </record>

        <menuitem id="account_financial_report_prefix_menu"
                  action="account_financial_report_prefix_action"
                  parent="account.menu_account_reports"
                  sequence="50"/>

    </data>
</openerp>
